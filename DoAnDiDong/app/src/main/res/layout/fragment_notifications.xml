<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.NotificationsFragment">
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorTikiToolbar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông báo"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:layout_marginStart="10dp"/>

        <ImageButton
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/imageButton_cart"
            android:src="@drawable/icons8_shopping_cart_64"
            android:padding="15dp"
            android:layout_toStartOf="@id/imageButton_menu"
            android:background="@drawable/custom_item_2"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/imageButton_menu"
            android:src="@drawable/custom_item_2"
            android:background="@drawable/icons8_menu_vertical_64"
            android:padding="15dp"
            android:layout_alignParentEnd="true"
            android:scaleType="fitCenter"/>





    </RelativeLayout>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="30dp"
        android:id="@+id/mebe"
        android:background="@drawable/bg_border_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/sachMeVaBe"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_item_2"
            android:scaleType="fitCenter"
            android:src="@drawable/mevabe"></ImageButton>

        <ImageView
            android:id="@+id/tikinow"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:src="@drawable/h2">

        </ImageView>

        <TextView
            android:id="@+id/namesach"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tryền thuyết đồi thú nhún"
            android:textAlignment="center"
            android:textColor="#000"

            android:textSize="20dp" />


        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/giabansach"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60000đ"

                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/giamgiasach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="10%"

                android:textAlignment="center"
                android:textColor="#babcc4"
                android:textSize="20dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/giagocsach"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50000đ"

            android:textAlignment="center"
            android:textColor="#babcc4"
            android:textSize="20dp" />


    </LinearLayout>
</androidx.cardview.widget.CardView>